<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space3dp"
        android:backgroundTint="@color/white"
        android:padding="2dp"
        card_view:cardElevation="7dp"
        card_view:strokeColor="@color/cardViewBorder"
        card_view:strokeWidth="2dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/space5dp">

           <com.google.android.material.card.MaterialCardView
               android:id="@+id/image_cv"
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/space3dp"
               android:backgroundTint="@color/white"
               android:padding="2dp"
               card_view:cardCornerRadius="100dp"
               card_view:cardElevation="7dp"
               card_view:strokeColor="@color/cardViewBorder"
               card_view:strokeWidth="2dp">


               <ImageView
                   android:layout_margin="@dimen/dimen_2"
                   android:id="@+id/iv_notification"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/aajeevika"/>

           </com.google.android.material.card.MaterialCardView>






           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_toRightOf="@+id/image_cv">

               <TextView
                   android:id="@+id/tv_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Title"
                   android:textSize="20sp"
                   android:textColor="@color/black"
                   android:layout_marginLeft="20dp"
                   android:textStyle="bold"
                   android:padding="@dimen/space3dp"/>


               <TextView
                   android:id="@+id/tv_message"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="message for meal "
                   android:textSize="16sp"
                   android:layout_marginLeft="20dp"
                   android:padding="@dimen/space3dp"/>


           </LinearLayout>







       </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>

</LinearLayout>