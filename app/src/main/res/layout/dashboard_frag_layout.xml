<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_backghround"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/scannerCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space5dp"
                android:layout_marginTop="@dimen/space5dp"
                android:layout_marginRight="@dimen/space3dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/cardViewBorder"
                card_view:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space2dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_horizontal"
                            android:text="@string/bill_created_date"
                            android:textColor="@color/text_Colour" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/billCreatedDateBtn"
                            style="@style/OutlineIconTextButton"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/select_date" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/billDateTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_horizontal"
                            android:text="29-01-2021"
                            android:textColor="@color/text_Colour" />

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/imgBarcode"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/barcode" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/syncDataTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sync_data"
                                android:fontFamily="@font/roboto_bold"
                                android:background="@color/purple"
                                android:textColor="@color/white"
                                android:padding="2dp"
                                android:layout_margin="2dp"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                               android:layout_toRightOf="@+id/syncDataTv"
                                android:visibility="visible"
                                android:id="@+id/textOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/syncDataTv"

                                android:text="10"
                                android:textColor="#FFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/badge_circle"/>
                        </RelativeLayout>




                        <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:padding="2dp"
                            android:layout_margin="@dimen/space5dp"
                            card_view:cardElevation="7dp"
                            card_view:strokeColor="@color/cardViewBorder"
                            card_view:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:gravity="center_horizontal"
                                    android:text="@string/avail_qty"
                                    android:textColor="@color/text_Colour" />

                                <TextView
                                    android:id="@+id/avlbQntyTv"
                                    android:layout_marginBottom="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/purple" />

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>




                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/topCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space5dp"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/cardViewBorder"
                card_view:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        android:hint="@string/product_name">

                        <AutoCompleteTextView
                            android:id="@+id/productNameSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        android:hint="@string/product_description">

                        <AutoCompleteTextView
                            android:id="@+id/productDisSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:hint="@string/product_quantity">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/quentityEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="10"
                                android:textColor="@color/color_000"
                                android:textColorHint="@color/color_1E50E9" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:hint="@string/unit_price">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/unitPriceEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="5"
                                android:textColor="@color/color_000"
                                android:textColorHint="@color/color_1E50E9" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addItemBtn"
                        style="@style/IconTextContainedButton"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/add_in_list"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/addItemCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/space5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/cardViewBorder"
                card_view:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/space5dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:padding="@dimen/space5dp"
                        android:id="@+id/priceListLayout">

                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_weight="1"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unit Price"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Total"
                            android:layout_weight="1"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Delete"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addItemRV"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:padding="3dp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/space5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/cardViewBorder"
                card_view:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space5dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/space3dp"
                    android:weightSum="2">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:text="@string/total_amount"
                        android:textColor="@color/text_Colour"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/totalAmountTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="xxxxx"
                        android:textColor="@color/text_Colour"
                        android:textSize="16sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton
                style="@style/IconTextContainedButton"
                android:id="@+id/generateBillBtn"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/genrate_bill"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>