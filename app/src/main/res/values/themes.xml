<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MelaSalesOffline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>


    <style name="IconTextContainedButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerTheme" parent="Theme.MaterialComponents.Light"></style>

    <style name="toolbarTheme" parent="@style/ThemeNoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="OutlineTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/purple</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/purple</item>
    </style>

    <style name="OutlineIconTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/purple</item>
        <item name="strokeColor">@color/purple</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="carViewTheme" parent="Widget.MaterialComponents.CardView">

        <item name="strokeWidth">@dimen/space1dp</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_marginLeft">@dimen/space5dp</item>
        <item name="android:layout_marginRight">@dimen/space5dp</item>
        <item name="android:layout_marginTop">@dimen/space5dp</item>
        <item name="android:layout_marginBottom">@dimen/space5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space5dp</item>
        <item name="android:padding">@dimen/space3dp</item>
    </style>




</resources>